<%= simple_form_for([@project, @project.tasks.build]) do |f| %>
	<%= f.input :content, placeholder: 'New Task' %> 	
	<hr>
	
    <%= f.input :gravity, collection: 1..5, as: :radio_buttons, class:"radio-inline" %> 
	
    <%= f.input :urgency, collection: 1..5, as: :radio_buttons, class:"radio-inline" %> 
	
    <%= f.input :tendency, collection: 1..5, as: :radio_buttons, class:"radio-inline" %> 
	<hr>
	<%= f.submit %> 	
<% end %> 